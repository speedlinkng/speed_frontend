<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Meta tags  -->
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"
    />

    <title><%= title %></title>
    <link rel="icon" type="image/png" href="../images/sim/Icon PNG2.png" />

    <!-- CSS Assets -->
    <link rel="stylesheet" href="../css/app.css" />
    <link rel="stylesheet" href="../css/output.css" />
    <link rel="stylesheet" href="../css/custom.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css"
    />

    <script>
      const backendUrl = "<%= urls.backend %>";
    </script>
    <!-- Javascript Assets -->
    <script src="../js/app.js" defer></script>
    <script src="../js/jquery.js"></script>
    <script src="../js/w3.js"></script>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Poppins:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />
  </head>
  <!-- <style>
    .card{
      color: black!important;
    }
    body{
      color: black!important;
    }
  </style> -->

  <body x-data class="is-header-blur" x-bind="$store.global.documentBody">
    <div class="h-screen w-full bg-">
      <!-- App preloader-->
      <div
        class="app-preloader fixed z-50 grid h-full w-full place-content-center bg-slate-50 dark:bg-navy-900"
      >
        <div class="app-preloader-inner relative inline-block h-48 w-48"></div>
      </div>

      <section
        class="signin"
        style="display: block"
        w2-include-html="/auth/signin-include.ejs"
      ></section>
      <section
        class="signup"
        style="display: none"
        w2-include-html="/auth/signup-include.ejs"
      ></section>
      <section
        class="forgot"
        style="display: none"
        w2-include-html="/auth/forgot-include.ejs"
      ></section>
      <% if (data !== null) { %>
      <section class="newPwd" style="display: none">
        <%- include('../includes/auth/newPassword-include.ejs') %>
      </section>
      <% } %>

      <section
        class="preverify"
        style="display: none"
        w2-include-html="/auth/preverify-include.ejs"
      ></section>

      <div id="x-teleport-target"></div>
      <script>
        window.addEventListener("DOMContentLoaded", () => Alpine.start());
      </script>
    </div>
  </body>
</html>
<% if (data !== null) { %>
<script>
  const sections = document.querySelectorAll("section");

  // Loop through each section
  sections.forEach((section) => {
    if (section.classList.contains("newPwd")) {
      // If it has the class 'privide', display it
      section.style.display = "block"; // Or any other display value you prefer
    } else {
      // If it doesn't have the class 'privide', hide it
      section.style.display = "none";
    }
  });
</script>
<% } %>
<script src="../js/loading.js"></script>
<script src="../js/module/global.js" defer></script>
