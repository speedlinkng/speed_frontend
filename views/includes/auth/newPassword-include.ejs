
  <!-- Page Wrapper -->
  <div id="root" class="min-h-100vh flex grow bg-slate-50 dark:bg-navy-900" x-cloak>
    <div class="fixed top-0 hidden p-6 lg:block lg:px-12">
      <a href="#" class="flex items-center space-x-2">
        <img class="h-12 w-12" src="../images/sim/icon PNG2.png" alt="logo" />
        <p class="text-xl font-semibold uppercase text-slate-700 dark:text-navy-100">
          Blazzing Share
        </p>
      </a>
    </div>
    <div class="hidden w-full place-items-center lg:grid">
      <div class="w-full max-w-lg p-6">
        <img class="w-full" x-show="!$store.global.isDarkModeEnabled" src="../images/illustrations/dashboard-meet.svg"
          alt="image" />
        <img class="w-full" x-show="$store.global.isDarkModeEnabled"
          src="../images/illustrations/dashboard-meet-dark.svg" alt="image" />
      </div>
    </div>
    <main class="flex w-full flex-col items-center bg-white dark:bg-navy-700 lg:max-w-md">
      <div class="relative flex w-full max-w-sm grow flex-col justify-center p-5 bg-red-">
        <div class="text-center bg-yellow- md:relative md:h-20 top-2 left-0 right-0  ">
          <img class="mx-auto h-16 w-16 lg:hidden" src="../images/sim/icon PNG2.png" alt="logo" />
          <div class="md:mt-0 mt-3 right-0 left-0 top-0">
            <h2 class=" text-xl font-semibold capitalize text-slate-600 dark:text-navy-100">
             Set New Password
            </h2>
            <span>Kindly enter your new password</span>
          </div>
        </div>

        <br>

        <div id="pwd_change_error" class="bg-red-400/20 mt-3 p-2 py-4 text-red-700 w-full h-fit rounded-lg text-sm" style="display:none ;">
          
        </div>
        <div id="pwd_change_success" class="bg-success/10 border border-success mt-3 p-4 text-success w-full h-fit rounded-lg text-sm "
          style="display: none;">

        </div>
        <div class="mt-4 space-y-4">

          <label class="relative flex">
            <input
              class="form-input peer w-full rounded-lg bg-slate-150 px-3 py-3 pl-9 ring-primary/50 placeholder:text-slate-400 hover:bg-slate-200 focus:ring dark:bg-navy-900/90 dark:ring-accent/50 dark:placeholder:text-navy-300 dark:hover:bg-navy-900 dark:focus:bg-navy-900"
              placeholder="Your New Password" type="password" id="new_password" />
            <span
              class="pointer-events-none absolute flex h-full w-10 items-center justify-center text-slate-400 peer-focus:text-primary dark:text-navy-300 dark:peer-focus:text-accent">
              <span
                class="pointer-events-none absolute flex h-full w-10 items-center justify-center text-slate-400 peer-focus:text-primary dark:text-navy-300 dark:peer-focus:text-accent">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transition-colors duration-200" fill="none"
                viewbox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                  d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
            </span>
          </label>
            <label class="relative flex">
                <input
                class="form-input peer w-full rounded-lg bg-slate-150 px-3 py-3 pl-9 ring-primary/50 placeholder:text-slate-400 hover:bg-slate-200 focus:ring dark:bg-navy-900/90 dark:ring-accent/50 dark:placeholder:text-navy-300 dark:hover:bg-navy-900 dark:focus:bg-navy-900"
                placeholder="Confirm Password" type="password" id="confirm_new_password" />
                <span
                class="pointer-events-none absolute flex h-full w-10 items-center justify-center text-slate-400 peer-focus:text-primary dark:text-navy-300 dark:peer-focus:text-accent">
                <span
                class="pointer-events-none absolute flex h-full w-10 items-center justify-center text-slate-400 peer-focus:text-primary dark:text-navy-300 dark:peer-focus:text-accent">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transition-colors duration-200" fill="none"
                    viewbox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                    d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
                </span>
            </label>
            <input
            class=" hidden form-input peer w-full rounded-lg bg-slate-150 px-3 py-3 pl-9 ring-primary/50 placeholder:text-slate-400 hover:bg-slate-200 focus:ring dark:bg-navy-900/90 dark:ring-accent/50 dark:placeholder:text-navy-300 dark:hover:bg-navy-900 dark:focus:bg-navy-900"
            placeholder="Confirm Password" type="password" id="user_id" value="<%= data %>" />
            
        </div>
        <button id="update_pwd_btn"
        class="btn mt-10 h-10 w-full bg-primary font-medium text-white hover:bg-primary-focus focus:bg-primary-focus active:bg-primary-focus/90 dark:bg-accent dark:hover:bg-accent-focus dark:focus:bg-accent-focus dark:active:bg-accent/90">
         Update Password
        </button>
 

      </div>
    </main>
  </div>

<script src="../js/auth/setPassword.js"></script>
