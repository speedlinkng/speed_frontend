    <div  x-data="{showModal3:false}" class="w3-container  ">
      <button onclick="getFieldValues(this)"  @click="showModal3 = window.showModal3"  id="create_save_" class="btn bg-primary text-white inline-flex w-full justify-center bg-primary hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center hover:bg-primary-focus focus:bg-primary-focus active:bg-primary-focus/90 dark:bg-accent dark:hover:bg-accent-focus dark:focus:bg-accent-focus dark:active:bg-accent/90">
        Save
      </button>

      <button onclick="getFieldValues(this)"  @click=" showModal3 = window.showModal3"  id="create_update_" class="hidden btn bg-primary text-white inline-flex w-full justify-center bg-primary hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center hover:bg-primary-focus focus:bg-primary-focus active:bg-primary-focus/90 dark:bg-accent dark:hover:bg-accent-focus dark:focus:bg-accent-focus dark:active:bg-accent/90">
