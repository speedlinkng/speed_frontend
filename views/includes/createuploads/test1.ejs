<script>
  window.showModal3 = false
 
  function saveOrganizedform_(e){
   
    if(e == 'save'){
      $('#updateOrganized').hide()
      $('#saveOrganized').show()
    // CLICK THE ORGANISEFILE BUTTON FROM HERE AUTOMATICALLY
    document.getElementById("setOrganizedForm").click();
    }
    if(e == 'update'){
      $('#updateOrganized').show()
      $('#saveOrganized').hide()
    // CLICK THE ORGANISEFILE BUTTON FROM HERE AUTOMATICALLY
    document.getElementById("setOrganizedForm").click();
    }

  }
</script>


